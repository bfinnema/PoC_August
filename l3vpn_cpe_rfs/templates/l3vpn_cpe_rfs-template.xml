<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{/device}</name>
      <config>
        <interface xmlns="urn:ios">
          <Loopback>
            <name>0</name>
            <ip>
              <address>
                <primary>
                  <address>{loopback0_address}</address>
                  <mask>{loopback0_mask}</mask>
                </primary>
              </address>
            </ip>
          </Loopback>
          <GigabitEthernet>
            <name>{/interface/interface_number}</name>
            <ip>
              <!-- <no-address>
                <address xmlns:nc="urn:ietf:params:xml:ns:netconf:base:1.0"
                        nc:operation="delete"/>
              </no-address> -->
              <address>
                <primary>
                  <address>{/interface/ipv4_address}</address>
                  <mask>{/interface/ipv4_mask}</mask>
                </primary>
              </address>
            </ip>
            <description>{/interface/interface_description}</description>
          </GigabitEthernet>
        </interface>
        <router xmlns="urn:ios">
          <bgp>
            <as-no>{as_number}</as-no>
            <bgp>
              <log-neighbor-changes>true</log-neighbor-changes>
            </bgp>
            <neighbor>
              <id>{bgp_neighbor_address}</id>
              <remote-as>{remote_as_number}</remote-as>
            </neighbor>
            <address-family>
              <ipv4>
                <af>unicast</af>
                <!-- <network>
                  <number>10.15.0.0</number>
                  <mask>255.255.0.0</mask>
                </network> -->
                <network>
                  <number>{loopback0_address}</number>
                  <mask>{loopback0_mask}</mask>
                </network>
                <neighbor>
                  <id>{bgp_neighbor_address}</id>
                  <activate/>
                </neighbor>
              </ipv4>
            </address-family>
          </bgp>
        </router>
      </config>
    </device>
  </devices>
</config-template>
